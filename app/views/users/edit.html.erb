<section class="bg-softgray py-10">
    <div class="leading-loose flex justify-center my-10">
        <div class="bg-white p-20 rounded-lg">
            <%= form_for @user do |form| %>
            <% if @user.errors.any? %>
            <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <p class="text-xl font-semibold mb-10 text-center">Update Profile Pic</p>
            <div class="">
                <%= form.label :avatar, :class => "block text-sm text-xl font-semibold text-center" %>
                <%= form.file_field :avatar, :class => "w-full py-1 bg-softgray rounded-lg placeholder-midgray text-midgray text-center", :placeholder => "avatar" %>
            </div>
            <div class="flex justify-center space-x-2 text-sm my-5 mx-10 p-1 rounded-lg text-center">
                <%= form.submit 'update avatar', :class => 'text-white bg-softgreen hover:bg-green rounded-lg py-1 px-3' %>
            </div>
            <% end %>
        </div>
    </div>
</section>