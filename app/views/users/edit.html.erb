<section class="bg-softgray py-10">
    <div class="leading-loose flex justify-center my-10">
        <div class="bg-white p-20 rounded-lg">
            <%= form_for @user do |form| %>
            <% if @user.errors.any? %>
            <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <div class="user">
                <h2>Update Profile Pic</h2>
                <%= form.label :avatar %>
                <%= form.file_field :avatar, :placeholder => "avatar" %>
                <%= form.submit 'update avatar' %>
            </div>
            <% end %>
        </div>
    </div>
</section>