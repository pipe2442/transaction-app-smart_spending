<section>
    <div class="user">
        <h1>Check Your Expenses</h1>
        <p>
            In this section you can check and create new expenses in your list with their respective groups.
        </p>
    </div>
    <%= render partial: "form" %>
    <!-- component -->
    
    <% @spendings.each do |spending|%>
    <!-- 1 card -->
    <div class="group">
        <div>
            <% if spending.group.icon.attached? %>
                <%= image_tag spending.group.icon, style: 'height:120px;width:120px;border-radius:50%;' %>
            <% end %>
            <h2>Group:</h2>
            <h3><%= link_to spending.group.name, group_path(spending.group) %></h3>    
        </div>
        <div>
            <h2><%= spending.name%></h2>
            <h3>Amount:</h3>
            <h3><%= spending.amount%></h3>
            <h3>Creation date:</h3>
            <h3><%= spending.created_at%></h3>
            
            <%= link_to "Delete", spending, method: :delete, :class => "text-white " %>
        </div>
    </div>
    <% end %>
</section>